{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "dockerfilePath": "agoraCooperative/Dockerfile",
    "context": "."
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && apache2-foreground",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}